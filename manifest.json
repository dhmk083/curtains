{
  "manifest_version": 2,

  "name": "Curtains",
  "version": "1.0",
  "description": "Toggles top and bottom opaque bars to help reading long texts.",

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Toggle opaque bars"
  },

  "permissions": ["activeTab", "storage"]
}
